<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="700" d:DesignHeight="450"
        x:Class="Sotrydniki.MainWindow"
		x:CompileBindings="False"
		Width="700" Height="450"
        Title="Sotrydniki">
	<StackPanel>
		<TextBlock Margin="0,10,0,0" FontSize="24" HorizontalAlignment="Center">Список сотрудников</TextBlock>
		<StackPanel Orientation="Horizontal">
			<StackPanel Width="350">
				<ListBox SelectionChanged="ListBox_SelectionChanged" Name="ListBoxdDol" Margin="0,20,0,0" Width="300" Height="350">
					<ListBox.ItemTemplate>
						<DataTemplate>
							<TextBlock Text="{Binding Name}"></TextBlock>
						</DataTemplate>
					</ListBox.ItemTemplate>
				</ListBox>
			</StackPanel>
			<StackPanel Width="350">
				<ListBox Name="ListBoxSort" Margin="0,20,0,0" Width="330" Height="350">
					<ListBox.ItemTemplate>
						<DataTemplate>
							<StackPanel>
								<StackPanel Orientation="Horizontal">
									<TextBlock Margin="10,10,0,0"></TextBlock>
									<TextBlock Text="{Binding Positions}" Margin="10,10,0,0"></TextBlock>
								</StackPanel>
								<TextBlock Text="{Binding Name}"></TextBlock>
								<StackPanel Orientation="Horizontal">
									<TextBlock Text="{Binding Workphone}" Margin="10,10,0,0"></TextBlock>
									<TextBlock Text="{Binding Email}" Margin="10,10,0,0"></TextBlock>
								</StackPanel>
								<TextBlock Text="{Binding Office}"></TextBlock>
							</StackPanel>
						</DataTemplate>
					</ListBox.ItemTemplate>
				</ListBox>
			</StackPanel>
		</StackPanel>
	</StackPanel>
</Window>
